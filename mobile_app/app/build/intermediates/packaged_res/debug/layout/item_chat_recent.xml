<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgChatAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtChatName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#111418"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/cardAvatar"
        app:layout_constraintTop_toTopOf="@id/cardAvatar"
        app:layout_constraintEnd_toStartOf="@id/txtChatTime"
        app:layout_constraintBottom_toTopOf="@id/txtLastMessage"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/txtChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:42 AM"
        android:textSize="12sp"
        android:textColor="#2b8cee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtChatName"
        app:layout_constraintBottom_toBottomOf="@id/txtChatName"/>

    <TextView
        android:id="@+id/txtLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Last message preview..."
        android:textSize="14sp"
        android:textColor="#637588"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/cardAvatar"
        app:layout_constraintTop_toBottomOf="@id/txtChatName"
        app:layout_constraintEnd_toStartOf="@id/badgeUnread"
        app:layout_constraintBottom_toBottomOf="@id/cardAvatar"/>

    <TextView
        android:id="@+id/badgeUnread"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_badge_circle"
        android:text="2"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtChatTime"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
