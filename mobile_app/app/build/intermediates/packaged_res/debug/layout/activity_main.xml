<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_authenticating"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/action_upload_media"
        android:enabled="false"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnBackup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/action_backup_data"
        android:enabled="false"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnStream"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/action_start_live"
        android:enabled="false"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnScreenshot"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Take Screenshot &amp; Upload"
        android:enabled="false"/>

</LinearLayout>
